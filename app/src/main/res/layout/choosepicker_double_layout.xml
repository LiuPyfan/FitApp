<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ascv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    
    <TextView 
        android:id="@+id/indicate_Info"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:text=""
        android:gravity="center"
        style="@style/text_16_666666"/>
        <com.cn.fit.util.segmentbutton.AndroidSegmentedControlView
        	android:layout_marginTop="5dip"      
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        ascv:ascv_defaultSelection="0"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:id="@+id/chooseSugar1"
	        android:visibility="gone"
	        ascv:ascv_unselectedTextColor="@color/test_attr_unselected_text_color"
	        ascv:ascv_selectedTextColor="@color/test_attr_selected_text_color"
	        ascv:ascv_selectedColor="@color/test_attr_selected_color"
	        ascv:ascv_unselectedColor="@color/test_attr_unselected_color"
	        ascv:ascv_stretch="true"
	        ascv:ascv_items="@array/bloodsugar1" />
        <com.cn.fit.util.segmentbutton.AndroidSegmentedControlView
        	android:layout_marginTop="5dip"      
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:id="@+id/chooseSugar2"
	        android:visibility="gone"
	        ascv:ascv_unselectedTextColor="@color/test_attr_unselected_text_color"
	        ascv:ascv_selectedTextColor="@color/test_attr_selected_text_color"
	        ascv:ascv_selectedColor="@color/test_attr_selected_color"
	        ascv:ascv_unselectedColor="@color/test_attr_unselected_color"
	        ascv:ascv_stretch="true"
	        ascv:ascv_items="@array/bloodsugar2" />
    <TextView 
        android:id="@+id/info_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        style="@style/text_16_666666"
        android:textSize="22dip"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dip">
    <com.cn.fit.util.PickerView
        android:id="@+id/choose_Picker1"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/dialog_picker_bg"
        style="@style/text_style" 
        android:layout_marginBottom="10dip"/>
     <com.cn.fit.util.PickerView
        android:id="@+id/choose_Picker2"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/dialog_picker_bg"
        style="@style/text_style" 
        android:layout_marginBottom="10dip"/>
      <com.cn.fit.util.PickerView
        android:id="@+id/choose_Picker3"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/dialog_picker_bg"
        style="@style/text_style" 
        android:layout_marginBottom="10dip"/>
    </LinearLayout>


</LinearLayout>