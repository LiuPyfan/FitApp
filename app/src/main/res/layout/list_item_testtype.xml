<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/vido_circle_img"
                style="@style/text_large_style"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/iconfont_shenghuoxiguan"
                android:scaleType="centerInside" />
            <ImageView
                android:id="@+id/red_mark_Test"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/unread_count_bg"
                android:scaleType="centerInside"
                android:layout_marginLeft="30dp"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vido_name"
                    style="@style/text_style"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0dip"
                    android:layout_weight="0.5"
                    android:text="身体状态评估" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vido_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:layout_marginTop="10dip"
                    android:singleLine="false"
                    android:text="欢迎会进行和大家快圣诞节卡上的金卡上刊登"
                    android:textColor="@color/font_gray"
                    android:textSize="14dip" >
                </TextView>

                <ImageView
                    android:id="@+id/evaluate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/gray_third" />

</LinearLayout>