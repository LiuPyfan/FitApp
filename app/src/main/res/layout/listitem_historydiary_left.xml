<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dip"
    android:orientation="horizontal"
    android:background="@color/transparent" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
            	<TextView
            	    android:layout_marginLeft="10dip"
                    android:id="@+id/health_tips"
                    android:singleLine="false"
                    android:layout_width="0dip"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0dip"
                    android:gravity="center_vertical|left"
                    android:text="温馨提示:\n测量的时候注意保护膝盖。"
                    style="@style/text_style"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="visible"/>   
                <TextView
                    android:id="@+id/health_time"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0dip"
                    android:gravity="center_vertical|right"
                    android:text="14:00"
                    android:textSize="16dip"
                    android:textColor="@color/blue_third" 
                    android:visibility="visible"/>      
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:orientation="vertical" >

                <View
                    android:layout_width="2dip"
                    android:layout_height="0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center"
                    android:src="@drawable/ganyu_timepoint" 
                    />

                <View
                    android:layout_width="2dip"
                    android:layout_height="0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    />
       </LinearLayout>


       <LinearLayout
                android:id="@+id/right_top_layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" 
                android:gravity="center_vertical"
                android:paddingLeft="0dip"
                android:paddingRight="10dip"
                android:paddingTop="30dip"
                android:paddingBottom="30dip"
                android:visibility="visible"
                >
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_dialog"
                    android:padding="5dip"
                    android:orientation="vertical">
                <TextView android:id="@+id/health_desc"
                    android:layout_width="match_parent"
                    android:layout_margin="5dip"
                    android:layout_height="wrap_content"
                    style="@style/text_style"
                    android:singleLine="false"
                    android:gravity="center"
                    android:text="今日训练"/>
                <FrameLayout 
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginTop="5dip"
                    android:id="@+id/pic_layout">
                <ImageView
                    android:id="@+id/health_pic"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:padding="5dip"
                    android:src="@drawable/icn_play_big"
                    android:layout_height="match_parent"
                    />
                </FrameLayout>
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
