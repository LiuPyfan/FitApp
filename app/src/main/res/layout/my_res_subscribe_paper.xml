<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscribe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <include layout="@layout/main_top"
        android:id="@+id/paper_title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@color/trans_30_blue"
        android:gravity="center" >

        <TextView
            android:id="@+id/choose_type1_tv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="选择类别▼"
            style="@style/text_large_style"
            android:textColor="@color/blue_second"/>

    </LinearLayout>

    <ListView
        android:id="@+id/subscribe_paper_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50dp" 
        android:cacheColorHint="#00000000" 
	    android:divider="@color/lightgray"
        android:dividerHeight="1dp"
	    android:listSelector="@android:color/transparent">
    </ListView>



</LinearLayout>