<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="测量说明"
        android:gravity="center"
        style="@style/text_16_666666"/>
    <ImageView
        android:id="@+id/webview_detecttip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/test_desc"
        android:gravity="center"
        />
    <TextView 
        android:background="@drawable/list_biankuang"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:paddingTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="① 如图所示用您的左手食指覆盖手机背面闪光灯和摄像头。\n\n② 点击“开始”按钮开始测量，测量时间为15秒左右。\n\n③ 测量完成之后数据会显示在界面上，点击保存提交将数据提交。"
        style="@style/text_16_666666"/>
    </LinearLayout>
    <CheckBox 
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:id="@+id/checkBox_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下次不再显示该提示"
        android:gravity="center_vertical"
        style="@style/text_16_666666"
        android:textColor="@color/blue_second"
         />
</LinearLayout>
</ScrollView>