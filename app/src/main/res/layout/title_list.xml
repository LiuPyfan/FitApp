<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_second"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    >

        <LinearLayout
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_tv"
                style="@style/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="高血压健康之旅"
                android:textColor="@color/blue_second" />

            <TextView
                android:id="@+id/much_post_tv"
                style="@style/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrowha"
                android:gravity="center_vertical|right"
                android:text="更多"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    <com.cn.fit.utils.listviewwithgridview.MGridView
        android:id="@+id/my_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:padding="0dp"
        android:verticalSpacing="1dp" />

</LinearLayout>